{
  "name": "multicolour",
  "version": "0.6.2-beta",
  "description": "Generate your API and single page app with a config file and JSON and use almost any DB tech",
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "multicolour": "start.js"
  },
  "scripts": {
    "linter": "eslint ./**/*.js",
    "unit-tests": "npm run linter && tape tests/*.js | tap-spec",
    "integration-tests": "newman run tests/integration/postman_collection.json",
    "test": "npm run unit-tests && npm run integration-tests",
    "test-coverage": "istanbul cover tape tests/*.js --recursive --report lcov -x '**/cli.js' -x '**/waterline-fixes/**' | tap-spec",
    "changelog": "github_changelog_generator -u Multicolour -p multicolour"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Multicolour/multicolour.git"
  },
  "author": "newworldcode <hello@newworld.codes> (https://newworld.codes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Multicolour/multicolour/issues"
  },
  "homepage": "https://github.com/Multicolour/multicolour#readme",
  "dependencies": {
    "@newworldcode/talkie": "^1.0.9",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "cross-spawn": "^5.0.1",
    "debug": "^2.6.0",
    "fs-extra": "^2.0.0",
    "inquirer": "^3.0.1",
    "joi": "^10.2.1",
    "jsocrud": "^2.0.3",
    "mkdirp": "^0.5.1",
    "npm-registry-client": "^7.4.5",
    "pluralize": "^3.1.0",
    "replacestream": "^4.0.2",
    "uuid": "^3.0.1",
    "validate-npm-package-name": "^2.2.2",
    "waterline": "git+https://github.com/Multicolour/waterline.git#0.12.x",
    "waterline-joi": "^1.1.1"
  },
  "engine-strict": true,
  "engineStrict": true,
  "engines": {
    "node": ">= 4.5.0"
  },
  "devDependencies": {
    "async": "^2.1.4",
    "eslint": "^3.15.0",
    "istanbul": "^0.4.5",
    "newman": "^3.4.3",
    "sails-memory": "^0.10.7",
    "snyk": "^1.24.6",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  }
}
